    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--port", "5005"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: Flask-DB Remote",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "testing"
            },
            "args": [
                "run",
                "--no-debugger",
                "--port", "5005"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: gunicorn",
            "type": "python",
            "request": "launch",
            "program": "./venv/bin/gunicorn",
            "args": [  "--config=gunicorn_config.py", "app:app"]
        }
    ]
}